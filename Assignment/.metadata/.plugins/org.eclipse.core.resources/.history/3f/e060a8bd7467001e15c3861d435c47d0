#include "lcd.h"

FILE *lcd;

setup_lcd(){
	lcd = fopen(LCD_NAME, "w");
}

write_to_lcd( const char *string){
	#define ESC 27
	#define CLEAR_LCD_STRING "[2J"
	fprintf(lcd, "%c%s", ESC, CLEAR_LCD_STRING);
	fprintf(lcd, string);
}

close_lcd(){
	fclose(lcd);
}


