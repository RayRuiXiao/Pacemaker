#include "timers.h"

alt_alarm timer;

alt_u32 APLEDTimerISR(void* context){
	IOWR_ALTERA_AVALON_PIO_DATA(LEDS_GREEN_BASE, 0b00); //turn off LEDs
	printf("APLEDExpired\r\n");
	return 0;
}


void test_timer(){
	void* context = 0;


	IOWR_ALTERA_AVALON_PIO_DATA(LEDS_GREEN_BASE, 0b11);
	printf("timer started");
	alt_alarm_start(&timer, LED_TIMEOUT, APLEDTimerISR, context);

}

