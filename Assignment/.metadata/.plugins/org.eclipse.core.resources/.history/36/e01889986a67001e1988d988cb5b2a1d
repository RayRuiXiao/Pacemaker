#include "uart.h"

FILE* uart;
char* byte;

void setup_uart(){
	uart = open(UART_NAME,(O_NONBLOCK | O_RDWR));\

	if(!uart){
		printf("Failed to open UART");
	}

}

void check_uart(){
	if (read(uart,byte,1) > 0){
		if (*byte == 'A'){
			printf("ASense UART\n");
		}
		else if (*byte == 'V'){
			printf("VSense UART\n");
		}
		else{
			printf("Vn2\n");
		}
	}
}

void close_uart(){
	close(uart);
}

