#include "uart.h"

FILE* uart;

void setup_uart(){
	uart = open(JTAG_UART_NAME,(O_NONBLOCK | O_RDWR));

	if(!uart){
		printf("Failed to open UART");
	} else {
		printf("UART Started");

	}

}

void check_uart(){

	char uartBuffer[10];
	int length = 0;
	length = read(uart, uartBuffer, sizeof(uartBuffer) - 1);

	if(length > 0){
		for(int i = 0; i < length; i++){
			if(uartBuffer[i] == 'V'){
				printf(" --V--");
			}else if(uartBuffer[i] == 'A'){
				printf(" --A--");
			}
		}
	}
}

void close_uart(){
	close(uart);
}

